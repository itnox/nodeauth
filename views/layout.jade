doctype html
html.h-100(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='UsMan Aziz')
    title UsMan Aziz
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body.d-flex.flex-column.h-100
    header
      // Fixed navbar
      nav.navbar.navbar-expand-md.navbar-dark.bg-dark
        a.navbar-brand(href='/') UsMan Aziz
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item(class=(title == 'Members' ? 'active' : ''))
              a.nav-link(href='/') Members 
            li.nav-item(class=(title == 'Register' ? 'active' : ''))
              a.nav-link(href='/users/register') Register
            li.nav-item(class=(title == 'Login' ? 'active' : ''))
              a.nav-link(href='/users/login') Login
          ul.navbar-nav.navbar-right
            li
              a.nav-link(href="/users/logout") Logout
    main.flex-shrink-0(role='main')
      .container
        block content
    footer.footer.mt-auto.py-3
      .container
        span.text-muted Place sticky footer content here.
    script(src='/javascripts/jquery3.js')
    script(src='/javascripts/jquery-slim.min.js')
    script(src='/javascripts/bootstrap.bundle.min.js')
